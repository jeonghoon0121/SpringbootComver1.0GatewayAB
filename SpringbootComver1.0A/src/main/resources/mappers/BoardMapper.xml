<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.com.board.BoardMapper">
    <resultMap id="boardResultMap" type="com.ohgiraffers.com.board.BoardDTO">
        <id property="boardId" column="board_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findAllBoards" resultMap="boardResultMap">
        SELECT
        board_id,
        name,
        description
        FROM boards
        ORDER by board_id
    </select>
    <insert id="addNewBoard" parameterType="com.ohgiraffers.com.board.BoardDTO">
        INSERT INTO boards
        (
        name,
        description
        )
        VALUES
        (
        #{ name }
        ,#{ description }
        )
    </insert>
    <update id="updateBoard" parameterType="com.ohgiraffers.com.board.BoardDTO">
        UPDATE boards
        SET name= #{ name },
        description= #{ description }
        WHERE board_id= #{ boardId }
    </update>
    <delete id="deleteBoard" parameterType="com.ohgiraffers.com.board.BoardDTO">
        DELETE FROM boards
        WHERE board_id= #{ boardId }
    </delete>
</mapper>